<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage">

    <Button
        android:id="@+id/ChiefsBut"
        android:layout_width="137dp"
        android:layout_height="86dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="128dp"
        android:text="@string/chiefs"
        android:onClick="changeMessageBucs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bowlText" />

    <Button
        android:id="@+id/BucsBut"
        android:layout_width="137dp"
        android:layout_height="86dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="201dp"
        android:text="@string/bucs"
        android:onClick="changeMessageChiefs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChiefsBut"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/bowlText"
        android:layout_width="266dp"
        android:layout_height="109dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="98dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="68dp"
        android:text="@string/who_do_you_think_will_win_the_super_bowl"
        app:layout_constraintBottom_toTopOf="@+id/ChiefsBut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>